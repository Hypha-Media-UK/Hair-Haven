
    <section class="cta-section{% if entry.callToAction.textColor %} cta-light-text{% endif %}" {% if entry.callToAction.backgroundImage.one() %}style="background-image: {% if entry.callToAction.textColor %}linear-gradient(135deg, rgba(13, 27, 42, 0.7) 0%, rgba(13, 27, 42, 0.85) 100%){% else %}linear-gradient(to right, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)){% endif %}, url({{ entry.callToAction.backgroundImage.one().url() }});"{% endif %}>
        <div class="container">
            <div class="cta-content">
                <div class="section-header">
                    <h2>{{ entry.callToAction.sectionTitle }}</h2>
                    <p>{{ entry.callToAction.sectionSubTitle }}</p>
                </div>
            {% if entry.callToAction.sectionButton %}
                <a href="{{ entry.callToAction.sectionButton }}" class="btn primary">{{ entry.callToAction.sectionButton.label }}</a>
            {% endif %}
            </div>
        </div>
    </section>
